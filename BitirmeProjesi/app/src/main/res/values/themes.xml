<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.BitirmeProjesi" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_mor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/primary_mor_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorError">@color/error_red</item>
        <item name="android:colorBackground">@color/background_light_gray</item>
        <item name="colorSurface">@color/background_white</item>
        <item name="colorOnSurface">@color/text_dark</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
    </style>
    
    <!-- Button Styles -->
    <style name="PrimaryButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary_mor</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">56dp</item>
        <item name="elevation">4dp</item>
    </style>
    
    <style name="SecondaryButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary_mor</item>
        <item name="android:textColor">@color/primary_mor</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">56dp</item>
    </style>
    
    <style name="TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>